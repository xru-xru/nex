{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":automergePr",
    ":semanticCommits",
    ":autodetectPinVersions",
    ":combinePatchMinorReleases",
    ":rebaseStalePrs"
  ],
  "rangeStrategy": "update-lockfile",
  "constraints": {
    "node": "22.x"
  },
  "packageRules": [
      {
          "matchUpdateTypes": [
              "minor",
              "patch",
              "pin",
              "digest"
          ],
          "automerge": false
      },
      {
          "matchUpdateTypes": [
              "major"
          ],
          "minimumReleaseAge": "3 days",
          "internalChecksFilter": "strict",
          "automerge": false
      }
  ]
}
